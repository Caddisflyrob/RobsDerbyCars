@model RobsDerbyCars.Models.Heat

@{
    ViewBag.Title = "Race a Heat";
}
<body style="background-color:rgb(0,100,150)">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



        <div class="form-horizontal">
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.HeatID)
            @Html.HiddenFor(model => model.RaceID)
            @Html.HiddenFor(model => model.Division)
            @Html.HiddenFor(model => model.IsComplete)
            @Html.HiddenFor(model => model.FirstRacerID)
            @Html.HiddenFor(model => model.SecondRacerID)
            @Html.HiddenFor(model => model.FirstRacerName)
            @Html.HiddenFor(model => model.SecondRacerName)

            <table class="table" style="width:22%;border: 4px solid black; background-color:rgb(48, 230, 200)">
                <tr>
                    <td colspan="2" style="text-align:center; color:rgb(0,100,150)">
                        Mark the Winner.
                    </td>
                </tr>
                <tr class="form-horizontal">
                    <td class="form-group" style="font-size:20px; text-align:right">
                        <form>
                            @*Html.DisplayFor(modelItem => Model.FirstRacerName)*@

                            @Model.FirstRacerName <input type="radio" name="FirstRacerIsWinner" value=true>
                            <br>
                            @Model.SecondRacerName <input type="radio" name="FirstRacerIsWinner" value=false>
                            <br>
                        </form>
                    </td>
                </tr>


                <tr>
                    <td colspan="2" style="text-align:center">
                        <div class=" form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </td>
                </tr>
            </table>


        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>