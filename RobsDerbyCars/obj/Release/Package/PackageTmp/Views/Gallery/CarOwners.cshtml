@model IEnumerable<RobsDerbyCars.ViewModels.CarOwners>

@{
    ViewBag.Title = "Car Owners";
}

<body style="background-color:rgb(0,100,150)">
    <h1 style="color:maroon;font-family:Magneto; background-color:rgb(48, 230, 200); border-radius:10px; padding:10px">Gallery Statistics</h1>

    <div style="background-color:white;border-radius:15px; padding:15px">
        <table>
            <tr>
                <th>
                    Owner
                </th>
                <th></th>
                <th>
                    Number of Cars
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner)
                    </td>
                    <td>
                        . . . . . . . . . . . . .
                    </td>
                    <td>
                        . . . @item.CarCount
                    </td>
                </tr>
            }
        </table>
</div>
</body>